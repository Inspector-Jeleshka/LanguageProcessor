<Window x:Class="GUI.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:GUI"
		mc:Ignorable="d"
		Title="Компилятор" Height="450" Width="800">
	<Window.Resources>
		<Style TargetType="Image">
			<Setter Property="Height" Value="32" />
		</Style>
	</Window.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition></RowDefinition>
			<RowDefinition></RowDefinition>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
		</Grid.ColumnDefinitions>
		<Menu Grid.Row="0">
			<MenuItem Header="Файл">
				<MenuItem Header="Создать" Command="New"></MenuItem>
				<MenuItem Header="Открыть" Command="Open"></MenuItem>
				<MenuItem Header="Сохранить" Command="Save"></MenuItem>
				<MenuItem Header="Сохранить как" Command="SaveAs"></MenuItem>
				<MenuItem Header="Выход"></MenuItem>
			</MenuItem>
			<MenuItem Header="Правка">
				<MenuItem Header="Отменить" Command="Undo"></MenuItem>
				<MenuItem Header="Повторить" Command="Redo"></MenuItem>
				<MenuItem Header="Вырезать" Command="Cut"></MenuItem>
				<MenuItem Header="Копировать" Command="Copy"></MenuItem>
				<MenuItem Header="Вставить" Command="Paste"></MenuItem>
				<MenuItem Header="Удалить" Command="Delete"></MenuItem>
				<MenuItem Header="Выделить все" Command="SelectAll"></MenuItem>
			</MenuItem>
			<MenuItem Header="Текст">
				<MenuItem Header="Постановка задачи"></MenuItem>
				<MenuItem Header="Грамматика"></MenuItem>
				<MenuItem Header="Классификация грамматики"></MenuItem>
				<MenuItem Header="Метод анализа"></MenuItem>
				<MenuItem Header="Тестовый пример"></MenuItem>
				<MenuItem Header="Список литературы"></MenuItem>
				<MenuItem Header="Исходный код программы"></MenuItem>
			</MenuItem>
			<MenuItem Header="Пуск"></MenuItem>
			<MenuItem Header="Справка">
				<MenuItem Header="Вызов справки" Command="Help"></MenuItem>
				<MenuItem Header="О программе"></MenuItem>
			</MenuItem>
		</Menu>
		<ToolBar Grid.Row="1">
			<Button ToolTip="Создать" Command="New">
				<Image Source="/Assets/file.png"/>
			</Button>
			<Button ToolTip="Открыть" Command="Open">
				<Image Source="/Assets/folder.png" />
			</Button>
			<Button ToolTip="Сохранить" Command="Save">
				<Image Source="/Assets/save.png" />
			</Button>
			<Separator />
			<Button ToolTip="Отменить" Command="Undo">
				<Image Source="/Assets/left-arrow.png" />
			</Button>
			<Button ToolTip="Повторить" Command="Redo">
				<Image Source="/Assets/right-arrow.png" />
			</Button>
			<Button ToolTip="Копировать" Command="Copy">
				<Image Source="/Assets/copy.png" />
			</Button>
			<Button ToolTip="Вырезать" Command="Cut">
				<Image Source="/Assets/cut.png" />
			</Button>
			<Button ToolTip="Вставить" Command="Paste">
				<Image Source="/Assets/paste.png" />
			</Button>
			<Separator />
			<Button ToolTip="Пуск">
				<Image Source="/Assets/run.png" />
			</Button>
			<Button ToolTip="Вызов справки" Command="Help">
				<Image Source="/Assets/question.png" />
			</Button>
			<Button ToolTip="О программе">
				<Image Source="/Assets/information.png" />
			</Button>
		</ToolBar>
		<RichTextBox Grid.Row="2" Margin="5" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">

		</RichTextBox>
		<DataGrid Grid.Row="3" Margin="5">

		</DataGrid>
	</Grid>
</Window>
